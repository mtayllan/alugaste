<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <title>Perfil</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../host_profile.css">
  <link rel="stylesheet" href="../styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css">
</head>




<body>
  <header class="navbar">
    <div class="navbar-inner">
      <h1 class="nav-logo">
        <a href="" class="logo-link">
          <img src="../logo_alugaste.jpg" alt="Dois telhados">
        </a>
      </h1>
      <label for="navbar-toggler" class="navbar-toggler">
        <i class="fas fa-bars"></i>
      </label>
      <input type="checkbox" id="navbar-toggler" class="navbar-toggler-check">
      <nav class="navbar-menu">
        <a href="" class="navbar-link">Pesquisar</a>
        <a href="" class="navbar-link">Seja um anfitrião</a>
        <a href="" class="navbar-link">Entrar</a>
        <a href="" class="navbar-link">Cadastre-se</a>
      </nav>
    </div>
  </header>
  <section>
    <div class="row">
      <div class="card" id="profile-card">
        <div class="row">
          <div class="fill">
            <img
              src="<%= host.photo %>"
              alt="foto do anfitrião" />
          </div>
        </div>
        <div class="row mt-1">
          <%= host.name %>
        </div>
        <div class="row">
          <%= host.reviewMean %> estrelas
        </div>
        <div class="row">
          <%= host.commentAmount %> comentários
        </div>
        <div class="row mt-2">
          De <%= host.address %>
        </div>
      </div>
      <div id="house-list-card" class="card">
        <h2>Disponíveis</h2>
        <div class="row">
          <% host.rooms.forEach(room => { %>
            <div class="house-item-card card">
              <div class="row">
                <img src="<%= room.photo %>" alt="gato"
                  class="house-pic">
              </div>
              <div class="left-row mt-1">
                <%= room.reviewMean %> estrelas
              </div>
              <div class="left-row">
                <%= room.name %>
              </div>
            </div>  
          <% }) %>
        </div>
        <div class="row mt-1">
          <button>Carregar mais</button>
        </div>
      </div>
    </div>
  </section>
  <section>
    <div id="comments-row">
      <div id="comments-box" class="card">
        <h2>Comentários</h2>
        <% host.comments.forEach(comment => { %>
          <div class="comment-card card">
            <div class="guest-info">
              <div class="guest-icon">
                <img src="<%= comment.guest.photo %>"
                  alt="ícone" class="guest-icon-image">
              </div>
              <div class="stay-and-guest-info">
                <div class="guest-name"><%= comment.guest.name %>, <%= comment.review %> estrelas</div>
                <div class="guest-stay">Ficou em <%= comment.stay.date %></div>
              </div>
            </div>
            <div class="comment-text">
              <%= comment.body %>
            </div>
          </div>  
        <% }) %>
        <div class="row mt-1">
          <button>Carregar mais</button>
        </div>

      </div>
    </div>
  </section>
</body>
